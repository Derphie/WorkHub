<section class="common-section">
    <div class="container">
        <h2 class="title">Conectează-te la WorkHub</h2>
        <p class="subtitle">Intră în cont pentru a accesa serviciile noastre</p>

        <form action="@Url.Action("SignIn", "Auth")" method="POST" class="signin-form">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required placeholder="Introdu adresa de email">
            </div>
            <div class="form-group">
